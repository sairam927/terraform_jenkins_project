pipeline {
    agent any

    environment {
        // Fetch AWS credentials stored in Jenkins (ID = aws-cred)
        AWS_CREDS = credentials('aws-cred')
        AWS_ACCESS_KEY_ID = "${AWS_CREDS_USR}"
        AWS_SECRET_ACCESS_KEY = "${AWS_CREDS_PSW}"
        AWS_DEFAULT_REGION = "us-east-1"   // Change region if needed
    }

    stages {

        stage('Checkout Code') {
            steps {
                echo 'ğŸ”„ Cloning Terraform project repository...'
                git branch: 'main', url: 'https://github.com/sairam927/terraform_jenkins_project.git'
            }
        }

        stage('Terraform Init') {
            steps {
                echo 'ğŸš€ Initializing Terraform...'
                sh '''
                    terraform init
                '''
            }
        }

        stage('Terraform Validate') {
            steps {
                echo 'ğŸ§  Validating Terraform configuration...'
                sh '''
                    terraform validate
                '''
            }
        }

        stage('Terraform Plan') {
            steps {
                echo 'ğŸ“ Creating Terraform plan...'
                sh '''
                    terraform plan -out=tfplan
                '''
            }
        }

        stage('Terraform Apply') {
            steps {
                input message: 'Do you want to apply the Terraform plan?', ok: 'Apply'
                echo 'âš™ï¸ Applying Terraform plan...'
                sh '''
                    terraform apply -auto-approve tfplan
                '''
            }
        }
    }

    post {
        success {
            echo 'âœ… Terraform pipeline executed successfully!'
        }
        failure {
            echo 'âŒ Terraform pipeline failed. Check Jenkins console output for details.'
        }
    }
}
